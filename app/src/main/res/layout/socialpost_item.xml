<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/socialpost_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/socialpost_item_description"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/socialpost_item_title"
            android:layout_toLeftOf="@+id/socialpost_item_image_href"
            android:paddingRight="@dimen/fab_margin"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/socialpost_item_image_href"
            android:layout_width="@dimen/length_100"
            android:layout_height="@dimen/length_75"
            android:layout_alignParentRight="true"
            android:layout_below="@id/socialpost_item_title"
            android:background="@drawable/imageview_shape"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>