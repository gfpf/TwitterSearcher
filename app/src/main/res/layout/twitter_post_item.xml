<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lay_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/social_post_item_user_image"
                android:layout_width="@dimen/length_100"
                android:layout_height="@dimen/length_75"
                android:background="@drawable/imageview_shape"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/social_post_item_user_name"
                style="@android:style/TextAppearance.Small"
                android:layout_width="@dimen/length_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/social_post_item_user_image"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/social_post_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:layout_toRightOf="@id/lay_user"
            android:autoLink="web"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>